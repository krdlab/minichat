html
  head
    link(rel='stylesheet', href='/stylesheets/style.css')
    title minichat: #{username} ホーム
  body
    div
      textarea#input_message(rows=3, cols=65)
    div
      input#send_button(type='button', value='送るー')
      span
        　現在の接続先：#{sio.host}:#{sio.port}, #{username}
    ul#histories
      - for (var i=0, size=hist.length; i<size; ++i) {
      li
        #{hist[i].username}
        br
        #{hist[i].message}
      - }
